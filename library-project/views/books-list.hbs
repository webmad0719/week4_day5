<div class="container">

  <div class="row">
    <div class="col-md-6">
      <h1>Nuestros libros</h1>
    </div>
    <div class="col-md-6">
      <ul class="books-list">
        {{#each books}}
        <li>{{title}}
          <div>
            <a href="/books/detail/{{_id}}">Ver detalles</a>
            -
            <a href="/books/edit?bookId={{_id}}">Editar libro</a>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>