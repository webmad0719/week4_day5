<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1>Editar libro {{theBook.title}}</h1>
    </div>

    <div class="col-md-6">

      <form action="/books/edit?bookId={{theBook._id}}" method="post">
        <div class="form-group">
          <label for="title-input">Título</label>
          <input name="title" type="text" class="form-control" id="title-input" value="{{theBook.title}}">
        </div>

        <div class="form-group">
          <label for="author-input">Autor</label>
          <input name="author" type="text" class="form-control" id="author-input" value="{{theBook.author}}">
        </div>

        <div class="form-group">
          <label for="description-input">Descripción</label>
          <textarea name="description" class="form-control" id="description-input">{{theBook.description}}</textarea>
        </div>

        <div class="form-group">
          <label for="rating-input">Rating</label>
          <input name="rating" type="text" class="form-control" id="rating-input" value="{{theBook.rating}}">
        </div>

        <button type="submit" class="btn btn-dark">Actualizar libro</button>

      </form>
    </div>

  </div>
</div>